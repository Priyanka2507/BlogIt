<div class="justify-between m-10">
    <div class="form-group">
        <label for="title">Title</label>
        <input required value="<%= posts.title %>" type="text" name="title" id="title" class="form-control">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" id="description" class="form-control"><%= posts.description %></textarea>
      </div>
      <div class="form-group">
        <label for="content">Content</label>
        <textarea required name="content" id="content" class="form-control"><%= posts.content %></textarea>
      </div>
      <br>
      <a href="/" class="btn btn-secondary">Cancel</a>
      <button type="submit" class="btn btn-primary">Save</button>
</div>